{
    "include": ["src/*"],
    "compilerOptions": {
        "outDir": "./lib",
        "types": ["cypress"],
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "emitDeclarationOnly": true
    },
    "exclude": [
        "src/reporter.js",
    ]
}
